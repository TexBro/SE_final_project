    <script>
      $(function(){

          $("#btnJoin").click(
              function(){
                  if($("#if").val() == "")
                  {
                      alert("아이디를 꼭 입력 하세요");
                      $("#id").focus();
                      return;
                  }
                  if($("#passwd").val() == "")
                  {
                      alert("비밀번호를 꼭 입력 하세요");
                      $("#passwd").focus();
                      return ;
                  }
                  if($("#name").val() == "")
                  {
                      alert("이름을 꼭 입력 하세요");
                      $("#name").focus();
                      return ;
                  }
                  if($("#email").val() == "")
                  {
                      alert("이메일을 꼭 입력 하세요");
                      $("#email").focus();
                      return ;
                  }
                  if($("#tel1").val() == "")
                  {
                      alert("전화번호 첫번째 자리를 확인해 주세요");
                      $("#tel1").focus();
                      return ;
                  }
                  if($("#tel2").val() == "")
                  {
                      alert("전화번호 두번째 자리를 확인해 주세요");
                      $("#tel2").focus();
                      return ;
                  }
                  if($("#tel3").val() == "")
                  {
                      alert("전화번호 세번쨰 자리를 확인해 주세요");
                      $("#tel3").focus();
                      return ;
                  }

                  var tel= $("#tel1").val() +'-' +$("#tel2").val() + '-' +$("#tel3").val();
                  $("#tel").val(tel);

                  if($("#address").val() == "")
                  {
                      alert("주소를 꼭 입력해 주세요");
                      $("#address").focus();
                      return ;
                  }
                  if($("#birth").val() == "")
                  {
                      alert("생일을 꼭 입력해 주세요");
                      $("#birth").focus();
                      return ;
                  }
                  if($("#birth").val().length != 8)
                  {
                      alert("생일은 8글자로 입력해 주세요");
                      $("#birth").focus();
                      return ;
                  }
                  if(isNaN($("#birth").val()))
                  {
                      alert("생일은 숫자만 입력해 주세요");
                      $("#birth").focus();
                      return ;
                  }
                  $("#joinForm").submit();
              }
          );
      });
